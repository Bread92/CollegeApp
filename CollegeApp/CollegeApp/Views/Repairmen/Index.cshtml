@model IEnumerable<CollegeApp.Dtos.RepairmanDto>

@{
    ViewData["Title"] = "Repairmen";
}

<h1>Repairmen</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Full name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RepairmanId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RepairmanId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RepairmanId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
