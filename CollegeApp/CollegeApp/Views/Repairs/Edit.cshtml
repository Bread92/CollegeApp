@model CollegeApp.Dtos.Repair.RepairDto

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Repair</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RepairId" />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RepairTime" class="control-label"></label>
                <input asp-for="RepairTime" class="form-control" />
                <span asp-validation-for="RepairTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RepairmanId" class="control-label"></label>
                <select asp-for="RepairmanId" class="form-control" asp-items="ViewBag.RepairmanId"></select>
                <span asp-validation-for="RepairmanId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MoldId" class="control-label"></label>
                <select asp-for="MoldId" class="form-control" asp-items="ViewBag.MoldId"></select>
                <span asp-validation-for="MoldId" class="text-danger"></span>
            </div>
