@model IEnumerable<CollegeApp.Dtos.RepairDto>

@{
    ViewData["Title"] = "Repairs";
}

<h1>Repairs</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Repair Time
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RepairTime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RepairId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RepairId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RepairId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
